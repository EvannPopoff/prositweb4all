{
  // Configuration globale de formatage
  "editor.formatOnSave": true,
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.encoding": "utf8",

  // Configuration des espaces et indentation
  "editor.tabSize": 4,
  "editor.insertSpaces": true,

  // Configuration spécifique JavaScript
  "[javascript]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Configuration spécifique HTML
  "[html]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Configuration spécifique CSS
  "[css]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Configuration spécifique PHP
  "[php]": {
      "editor.defaultFormatter": "bmewburn.vscode-intelephense-client",
      "editor.formatOnSave": true
  },

  // Configuration Prettier
  "prettier.singleQuote": true,
  "prettier.trailingComma": "es5",
  "prettier.tabWidth": 2,

  // Configuration Intelephense pour PHP
  "intelephense.format.enable": true,
  "intelephense.environment.phpVersion": "8.2",

  // Désactiver certains diagnostics stricts
  "intelephense.diagnostics.undefinedTypes": false,
  "intelephense.diagnostics.undefinedFunctions": false,
  "intelephense.diagnostics.undefinedConstants": false,
  "intelephense.diagnostics.undefinedClassConstants": false,
  "intelephense.diagnostics.undefinedMethods": false,

  // Stubs PHP pour l'autocomplétion
  "intelephense.stubs": [
      "apache", "bcmath", "bz2", "calendar", "com_dotnet",
      "Core", "ctype", "curl", "date", "dba", "dom",
      "enchant", "fileinfo", "filter", "ftp", "gd",
      "gettext", "hash", "iconv", "imap", "intl", "json",
      "libxml", "mbstring", "mysqli", "oci8", "openssl",
      "pcntl", "pcre", "PDO", "pdo_mysql", "Phar", "posix",
      "readline", "reflection", "session", "SimpleXML",
      "soap", "sockets", "sodium", "SPL", "standard",
      "superglobals", "sysvmsg", "sysvsem", "sysvshm",
      "tokenizer", "xml", "xmlreader", "xmlwriter", "zip", "zlib"
  ]
}
